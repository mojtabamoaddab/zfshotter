fatal() {
    echo "$@" >&2
    exit 1
}

if [[ -z "${SSH_ORIGINAL_COMMAND}" ]]; then
    fatal "Authentication successful, but shell access is not provided by zfshell."
fi

ARGS=(${SSH_ORIGINAL_COMMAND})
set -- "${ARGS[@]}"

COMMAND="$1"
DATASET="$2"

[[ -n "$DATASET" ]] || fatal "Command '$COMMAND' requires a dataset as an argument."

case "$COMMAND" in
    last-snapshot)
        zfs list -H -o name -t snapshot "$DATASET" | tail -n 1
        ;;
    create)
        zfs create -p "$DATASET"
        ;;
    receive)
        zfs receive "$DATASET"
        ;;
    *)
        fatal "Invalid command '$COMMAND'."
        ;;
esac
